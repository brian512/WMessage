<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp">

    <ImageView
        android:id="@+id/recent_item_userhead"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_centerVertical="true"
        android:src="@mipmap/ic_launcher"
        />

    <TextView
        android:id="@+id/recent_item_nikename"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="昵称很长很长很长很长很长很长很长很长"
        android:textColor="@color/com_text_black"
        android:textStyle="bold"
        android:textSize="15sp"
        android:maxLines="1"
        android:layout_toStartOf="@+id/recent_item_time"
        android:layout_toEndOf="@+id/recent_item_userhead"
        android:ellipsize="end"
        android:layout_marginTop="10dp"
        />

    <TextView
        android:id="@+id/recent_item_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="消息很长很长很长很长很长很长很长很长很长很长很长"
        android:textColor="@color/com_text_black"
        android:textSize="12sp"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_below="@+id/recent_item_nikename"
        android:layout_toStartOf="@+id/recent_item_time"
        android:layout_toEndOf="@+id/recent_item_userhead"
        />

    <TextView
        android:id="@+id/recent_item_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="12:30"
        android:textColor="@color/com_text_black"
        android:textSize="12sp"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/forty_percent_transparency_black"
        android:layout_alignParentBottom="true"
        />

</RelativeLayout>